			margin-bottom 10px

/*==============================
	Article
==============================*/
.article
	display block
	position relative
	background linear-gradient( 90deg, rgba($clr1, .05) 0%, rgba($clr2, .05) 100% )
	margin 40px auto 0
	border-radius 20px
	width 100%
	max-width 400px
	&:before
	&:after
		content ''
		position absolute
		display block
		opacity .2
		background-image linear-gradient( -60deg, $clr1 0%, $clr2 100% )
		border-radius 0 0 10px 10px
		transition .4s ease
	&:before
		z-index 2
		left 20px
		right 20px
		height 10px
		bottom -10px
	&:after
		z-index 1
		left 30px
		right 30px
		height 20px
		bottom -20px
	&__img
		position relative
		display block
		overflow hidden
		border-radius 20px 20px 0 0
		margin 0
		&:before
			content ''
			position absolute
			display block
			left 10px
			top 10px
			right 10px
			bottom 10px
			background-image linear-gradient( 90deg, $clr1 0%, $clr2 100% )
			opacity 0
			z-index 1
			transition .4s ease
			pointer-events none
			border-radius 20px 20px 0 0
		&:after
			content '...'
			position absolute
			display flex
			flex-direction row
			justify-content center
			align-items center
			top 0
			left 0
			right 0
			bottom 0
			font-family 'Jura', sans-serif
			font-weight 600
			color $white
			font-size 32px
			opacity 0
			z-index 2
			transition .4s ease
			pointer-events none
			border-radius 20px 20px 0 0
		img
			width 100%
		&:hover
			&:before
				left 0
				top 0
				right 0
				bottom 0
				opacity .4
			&:after
				opacity 1
	&__header
		display block
		padding 15px 20px 10px
	&__title
		display flex
		flex-direction row
		justify-content space-between
		align-items center
		margin-bottom 0
		font-size 18px
		font-weight 500
		line-height 140%
		a
			color $title-color
			&:hover
				color $clr1
	&__content
		display block
		padding 0 20px 20px
		p
			margin-bottom 0
			font-size 16px
			line-height 26px
			color $text-color
			b
				font-weight 500
	&__meta
		display flex
		flex-direction row
		justify-content space-between
		align-items flex-end
		width 100%
		margin-top 20px
	&__author
		font-size 14px
		line-height 22px
		color rgba($text-color, .6)
		font-weight 400
		line-height 100%
		a
			color rgba($text-color, .6)
			&:hover
				color $clr1
	&__date
		font-size 12px
		line-height 22px
		color rgba($text-color, .6)
		font-weight 400
		line-height 100%
	@media (min-width: 768px)
		&__header
			padding 20px 20px 15px

