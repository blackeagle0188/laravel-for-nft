$white = #fff
$black = #000

$title-color = #343434
$text-color = #505050

$clr1 = #647DEE
$clr2 = #a754e2

/*==============================
	Fonts
==============================*/
@import url('https://fonts.googleapis.com/css2?family=Jura:wght@600;700&family=Roboto:wght@300;400;500&display=swap')

/*==============================
	Common styles
==============================*/
html
	-webkit-text-size-adjust 100%
	-ms-text-size-adjust 100%
html
body
	height 100%
body
	font-family 'Roboto', sans-serif
	font-weight 400
	background-color $white
	-webkit-font-smoothing antialiased
button
	padding 0
	border none
	background-color transparent
	border-radius 0
	transition .4s ease
	transition-property color, background-color, border-color
	&:focus
		outline none
a
	transition .4s ease
	transition-property color, background-color, border-color
	&:hover
	&:active
	&:focus
		outline none
		text-decoration none
input
textarea
select
	padding 0
	margin 0
	border-radius 0
	-webkit-appearance none
	-moz-appearance none
	appearance none
	box-shadow none
	transition .4s ease
	&:focus
		outline none

select
	max-width 100%
	
select::-ms-expand
	display none

ul
	margin 0
	padding 0
	list-style none

::-moz-selection
	background $white
	color $clr1
	text-shadow none
::selection
	background $white
	color $clr1
	text-shadow none

::-webkit-input-placeholder
	color $text-color
	opacity 1
::-moz-placeholder
	color $text-color
	opacity 1
:-moz-placeholder
	color $text-color
	opacity 1
:-ms-input-placeholder
	color $text-color
	opacity 1

.container
	@media (min-width: 1200px)
		max-width 1150px

.owl-carousel .owl-item img
	width auto
	max-width 100%

.tab-content > .tab-pane
	display none

.tab-content > .active
	display block

.fade
	transition opacity .4s linear

@media screen and (prefers-reduced-motion: reduce)
	.fade
		transition none

.fade:not(.show)
	opacity 0

.collapse:not(.show)
	display none

.collapsing
	position relative
	height 0
	overflow hidden
	transition height .4s ease

@media screen and (prefers-reduced-motion: reduce)
	.collapsing
		transition none

[data-parallax]
	background transparent

.progress
	display flex
	flex-direction row
	justify-content flex-start
	width 100%
	height 40px
	background-color $white
	border-radius 20px
	margin-bottom 30px
	margin-top 50px
	max-width 500px
	position relative
	&__value
		display flex
		flex-direction row
		justify-content center
		align-items center
		height 40px
		width auto
		margin-left auto
		margin-right 20px
		background-image -webkit-linear-gradient( 0deg, $clr1 0%, $clr2 100% )
		-webkit-background-clip text
		-webkit-text-fill-color transparent
		color $clr1
		font-size 14px
		font-weight 500
		position relative
		z-index 2
	&__line
		position absolute
		display flex
		flex-direction row
		justify-content flex-start
		align-items flex-start
		pointer-events none
		top -30px
		bottom 0
		z-index 2
		font-size 14px
		color $white
		svg
			width 18px
			height 20px
			margin-right 5px
			fill #29b474
			margin-left -9px
		&:before
			content ''
			position absolute
			display block
			bottom 0
			left 0
			top 25px
			background-color rgba($white, .15)
			width 1px
			border-radius 2px
	&--small
		background linear-gradient( 90deg, rgba($clr1, .05) 0%, rgba($clr2, .05) 100% )
		border 2px solid $clr1
		.progress__value
			font-size 12px
			height 38px
			margin-right 15px
		.progress__line
			color $text-color
			font-size 12px
			top -25px
			svg
				width 16px
				height 18px
				margin-left -8px
			&:before
				background-color rgba($black, .12)
				top 19px
		.progress-bar
			left -1px
			top -1px
			height 39px

.progress-bar
	display flex
	flex-direction column
	justify-content center
	overflow hidden
	text-align center
	white-space nowrap
	background-color $clr1
	border-radius 20px
	transition width .6s ease
	background-image linear-gradient(-45deg, rgba($black, .15) 25%, transparent 25%, transparent 50%, rgba($black, .15) 50%, rgba($black, .15) 75%, transparent 75%, transparent)
	background-size 100px 100px
	-webkit-animation progress-bar-stripes 4s linear infinite
	animation progress-bar-stripes 4s linear infinite
	position absolute
	left 0
	top 0
	height 40px
	
@-webkit-keyframes progress-bar-stripes
	from
		background-position 0 0
	to
		background-position 100px 0

@keyframes progress-bar-stripes
	from
		background-position 0 0
	to
		background-position 100px 0

/*==============================
	Header
==============================*/
.header
	position fixed
	width 100%
	top 0
	left 0
	z-index 9
	background-color transparent
	&:before
		content ''
		position absolute
		z-index -1
		display block
		width 100%
		left 0
		top 0
		height 0
		background-color transparent
		transition .4s ease
		pointer-events none
		box-shadow none
	&--active
		.header__btn
			span
				background-color $title-color
		.header__logo-white
			opacity 0
		.header__logo-dark
			opacity 1
		.header__logo
			pointer-events auto
		&:before
			height 70px
			background-color $white
			box-shadow 2px 0 8px rgba($black, .26)
	&__content
		display flex
		flex-direction row
		justify-content space-between
		align-items center
		position relative
		height 70px
		width 100%
	&__logo
		z-index 1
		width auto
		height 44px
		display inline-block
		position relative
		margin 0 0 0 40px
		pointer-events none
		img
			height 44px
			width auto
	&__logo-white
		position relative
		opacity 1
		transition .4s ease
	&__logo-dark
		position absolute
		top 0
		left 0
		opacity 0
		transition .4s ease
	&__btn
		position absolute
		width 24px
		height 22px
		display block
		left 0
		span
			position absolute
			left 0
			width 24px
			height 2px
			background-color $white
			border-radius 3px
			transition .5s
			opacity 1
			&:first-child
				top 0
			&:nth-child(2)
				top 10px
				width 16px
			&:last-child
				top 20px
				width 8px
		&--active
			span
				&:first-child
					transform rotate(45deg)
					top 10px
				&:nth-child(2)
					opacity 0
				&:last-child
					width 24px
					transform rotate(-45deg)
					top 10px
	&__tagline
		display none
	&__nav
		position fixed
		width 260px
		top 70px
		bottom 0
		left 0
		background-color #212121
		padding 35px 15px 0
		transition transform .4s ease
		transform translate3d(-260px, 0, 0)
		&--active
			transform translate3d(0, 0, 0)
		li
			display block
			margin-bottom 25px
			&:last-child
				margin-bottom 0
			&.active
				a
					color $clr2
		a
			display inline-block
			font-size 14px
			line-height 24px
			font-weight 400
			color $white
			text-transform uppercase
			&:hover
				color $clr1
	&__dropdown
		position relative
		display block
		width auto
		.dropdown-toggle
			display flex
			flex-direction row
			justify-content flex-start
			align-items center
			svg
				width 12px
				height auto
				stroke $white
				margin-left 3px
				margin-top 1px
				transition stroke .4s ease
			&:hover
				svg
					stroke $clr1
	&__dropdown-menu
		position absolute
		background-color $white
		padding 15px 20px
		display block
		width 180px
		text-align left
		z-index -1
		pointer-events none
		opacity 0
		border-radius 8px
		transition .4s ease
		transition-property opacity, margin-top, transform
		margin-top 0
		top 0
		box-shadow 2px 0 8px rgba($black, .26)
		transform translate3d(0px, 24px, 0px)
		li
			padding 0
			margin-bottom 10px
			&:last-child
				margin-bottom 0
		a
			font-size 16px
			line-height 26px
			color $title-color
			text-transform none
			&:hover
				color $clr1
		&.show
			z-index 1000
			pointer-events auto
			opacity 1
			margin-top 10px
	&__signin
		display flex
		flex-direction row
		justify-content center
		align-items center
		position relative
		height 44px
		border-radius 22px
		background linear-gradient( 90deg, $clr1 0%, $clr2 100% )
		color $white
		font-size 14px
		font-weight 500
		letter-spacing .4px
		text-transform uppercase
		padding 0 25px
		overflow hidden
		&:before
			content ''
			position absolute
			top 0
			left 0
			right 0
			bottom 0
			background linear-gradient( 90deg, $clr2 0%, $clr1 100% )
			opacity 0
			z-index 1
			pointer-events none
			transition .4s ease
		span
			position relative
			z-index 2
		&:hover
			color $white
			&:before
				opacity 1
	@media (min-width: 576px)
		&__tagline
			display block
			line-height 22px
			color $white
			font-size 14px
			transition color .4s ease
			margin-right auto
			margin-left 15px
			font-family 'Jura', sans-serif
			font-weight 700
		&--active
			.header__tagline
				color $text-color
	@media (min-width: 1200px)
		&__btn
			display none
		&__content
			height 80px
		&__logo
			margin 0
		&__nav
			position relative
			display flex
			flex-direction row
			justify-content flex-start
			align-items center
			background-color transparent
			top auto
			bottom auto
			left auto
			right auto
			width auto
			transform translate3d(0, 0, 0)
			padding 0
			margin-right auto
			li
				display block
				margin-right 44px
				margin-bottom 0
				&:last-child
					margin-right 0
			a
				display flex
				flex-direction row
				justify-content center
				align-items center
				height 40px
				color $white
				font-size 16px
				font-weight 400
				text-transform none
				&:hover
					color $clr1
		&__dropdown-menu
			transform translate3d(0px, 40px, 0px)
			margin-top -10px
			li
				margin-right 0
			a
				color $title-color
				justify-content flex-start
				&:hover
					color $clr1
			&.show
				margin-top 0
		&--active
			&:before
				height 80px
			.header__nav
				a
					color $title-color
					&:hover
						color $clr1
			.header__dropdown
				.dropdown-toggle
					svg
						stroke $title-color
					&:hover
						svg
							stroke $clr1

