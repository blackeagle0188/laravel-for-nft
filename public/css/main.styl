/*==============================
	Counter
==============================*/
.counter
	display block
	position relative
	padding 25px 0
	&:before
		content ''
		position absolute
		display block
		left 0
		top 0
		right 0
		bottom 0
		z-index 1
		background-image linear-gradient( 90deg, $clr1 0%, $clr2 100% )
		opacity .4
	&__box
		display block
		text-align center
		position relative
		z-index 2
		margin 25px 0
	&__value
		display block
		color $white
		font-family 'Jura', sans-serif
		font-weight 600
		font-size 42px
		line-height 100%
		margin-bottom 8px
	&__title
		display block
		color $white
		font-weight 400
		font-size 14px
		text-transform uppercase
